            const upgradeTimeStart = {{IronMine.UpgradeCost_TimeStart}};
            const upgradeTimeDuration = {{IronMine.UpgradeCost_Time}};
            const timeRemain = "Upgrade Remain Duration: " + (upgradeTimeDuration - (dateNow - upgradeTimeStart))
