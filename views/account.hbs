        function updateInputAndSelect(name, amount) {
            const customNumberInput = document.getElementById('customNumber');
            const currentValue = parseInt(amount);
            
            if (!isNaN(currentValue)) {
                customNumberInput.setAttribute('max', amount); // Update the max attribute
                customNumberInput.value = amount; // Set the new value
            }
        }

        function decrementValue() {
            const customNumberInput = document.getElementById('customNumber');
            if (customNumberInput.value > 1) {
                customNumberInput.value = parseInt(customNumberInput.value) - 1;
            }
        }

        function incrementValue() {
            const customNumberInput = document.getElementById('customNumber');
            const maxValue = parseInt(customNumberInput.getAttribute('max'));

            let currentValue = parseInt(customNumberInput.value);
            if (!isNaN(maxValue) && currentValue < maxValue) {
                customNumberInput.value = currentValue + 1;
            }else{
                customNumberInput.value = maxValue
            }
        }

    //Check blur system
    const customNumberInput = document.getElementById('customNumber');

    customNumberInput.addEventListener('blur', function() {
        const currentValue = parseInt(customNumberInput.value);
        const maxValue = parseInt(customNumberInput.getAttribute('max'));

            if((!isNaN(maxValue) && currentValue > maxValue) || isNaN(currentValue)) {
                customNumberInput.value = maxValue
            }else if(currentValue < 1){
                customNumberInput.value = 1
            }
    });
</script>